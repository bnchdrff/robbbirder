{
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "destructuring": true,
    "modules": true,
    "objectLiteralComputedProperties": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "templateStrings": true,
    "jsx": true
  },
  "env": {
    "node": true,
    "es6": true,
  },
  "rules": {
    /////////// Rules ///////////
    // Rules in ESLint are divided into several categories to help you better understand their value.
    // Additionally, not all rules are enabled by default.
    // Those that are not enabled by default are marked as being off.
    // use 0 for no action, 1 for warning, 2 for error

    /////////// Possible Errors ///////////
    // The following rules point out areas where you might have made mistakes.
    "comma-dangle": 0,
    "no-cond-assign": 0,
    "no-console": 0,
    "no-constant-condition": 0,
    "no-control-regex": 0,
    "no-extra-semi": 0,
    /////////// Best Practices ///////////
    // These are rules designed to prevent you from making mistakes. They either prescribe a better way of doing something or help you avoid footguns.
    "consistent-return": 0,
    "curly": [
      2,
      "multi-line"
    ],
    "eqeqeq": 2,

    /////////// Strict Mode ///////////
    // These rules relate to using strict mode.
    "strict": 0,

    /////////// Variables ///////////
    // These rules have to do with variable declarations.
    "no-catch-shadow": 0,
    "no-delete-var": 0,
    "no-label-var": 0,
    "no-shadow-restricted-names": 0,
    "no-shadow": 0,
    "no-undef-init": 0,
    "no-undef": 0,
    "no-undefined": 0,
    "no-unused-vars": 0,
    "no-use-before-define": 0,

    /////////// Stylistic Issues ///////////
    // These rules are purely matters of style and are quite subjective.
    "array-bracket-spacing": [2, "always"],
    "brace-style": [1, "1tbs"],
    "camelcase": 1,
    "comma-spacing": [
      2, {
        "before": false,
        "after": true
      }
    ],
    "comma-style": [1, "last"],
    "computed-property-spacing": [2, "never"],
    "indent": [2, 2],
    "new-cap": 0,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "no-underscore-dangle": 0,
    "object-curly-spacing": [2, "always"],
    "quotes": [
      1,
      "single",
      "avoid-escape"
    ],
    "semi-spacing": [
      2,
      {"before": false, "after": true}
    ],
    "semi": [
      2,
      "always"
    ],
    "space-after-keywords": [
      2,
      "always"
    ],
    "space-before-blocks": 0,
    "space-before-function-paren": 0,
    "spaced-comment": [1, "always"],

    /////////// ECMAScript 6 ///////////
    // These rules are only relevant to ES6 environments and are off by default.
    "generator-star-spacing": 1,
    "no-var": 1,
    "object-shorthand": 1,
    "prefer-const": 0,
  }
}
